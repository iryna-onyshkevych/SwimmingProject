@model DTO.Models.TrainingDTO
@{
    ViewBag.Title = "Delete Training";
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Delete Training</h4>
    </div>
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt>Training Date</dt>
            <dd>
                @Html.DisplayFor(model => model.TrainingDate)
            </dd> 

            <form asp-controller="SwimmerTraining" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Delete" />
                    <a asp-action="Index" asp-controller="Training" class="btn btn-light">Cancel</a>
                </div>
            </form>

        </dl>

    </div>

</div>